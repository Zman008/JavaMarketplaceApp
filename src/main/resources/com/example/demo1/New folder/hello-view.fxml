<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="1080" prefWidth="1920" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.HelloController">

    <top>
        <fx:include source="header.fxml" />
    </top>

    <center>
        <TilePane hgap="25.0" vgap="25.0">
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>
            <children>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="250.0" style="-fx-border-color: #ccc; -fx-padding: 10;">
                    <Label text="Product 1" />
                    <Button text="Add to Cart" />
                </VBox>
                <VBox alignment="CENTER" style="-fx-border-color: #ccc; -fx-padding: 10;">
                    <Label text="Product 2" />
                    <Button text="Add to Cart" />
                </VBox>
                <VBox alignment="CENTER" style="-fx-border-color: #ccc; -fx-padding: 10;">
                    <Label text="Product 3" />
                    <Button text="Add to Cart" />
                </VBox>
            </children>
        </TilePane>
    </center>

</BorderPane>
